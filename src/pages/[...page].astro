---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';
import { SITE_TITLE_I18N, SITE_DESCRIPTION_I18N } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import { useTranslations } from '../i18n/utils';

const lang = 'zh';
const t = useTranslations(lang);
const SITE_TITLE = SITE_TITLE_I18N[lang];
const SITE_DESCRIPTION = SITE_DESCRIPTION_I18N[lang];

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog', ({ data }) => {
		// 过滤掉草稿文章，只显示中文文章
		return data.draft !== true && (data.lang === 'zh' || data.lang === undefined);
	})).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);

	return paginate(posts, { pageSize: 10 });
}

const { page } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={t('article.list.page', { page: page.currentPage })} description={SITE_DESCRIPTION} />
		<style>
			html, body {
				height: 100%;
				margin: 0;
				padding: 0;
			}

			body {
				background: #c0c0c0;
				font-family: 'MS Sans Serif', sans-serif;
				display: flex;
				flex-direction: column;
				min-height: 100vh;
			}

			.desktop {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 20px;
				flex: 1;
				display: flex;
				flex-direction: column;
			}

			.window {
				flex: 1;
				display: flex;
				flex-direction: column;
			}

			.window-body {
				flex: 1;
				display: flex;
				flex-direction: column;
			}

			.article-list {
				flex: 1;
				margin-bottom: 20px;
			}

			.article-item {
				padding: 20px 30px;
				border-bottom: 1px solid #808080;
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 8px;
				gap: 10px;
			}

			.article-item:last-child {
				border-bottom: none;
			}

			.article-title {
				color: #000080;
				text-decoration: none;
				font-weight: bold;
				flex: 1;
				font-size: 18px;
				line-height: 1.5;
			}

			.article-title:hover {
				text-decoration: underline;
			}

			.article-date {
				color: #666666;
				font-size: 14px;
				margin-left: 40px;
				white-space: nowrap;
				min-width: 120px;
			}

			.pagination {
				text-align: center;
				margin-top: 20px;
			}

			.pagination a,
			.pagination span {
				margin: 0 5px;
				padding: 2px 8px;
				text-decoration: none;
				color: #000000;
			}

			.pagination .current {
				font-weight: bold;
				background: #000080;
				color: #ffffff;
			}

			/* Mobile responsive */
			@media (max-width: 600px) {
				.desktop {
					padding: 0 12px;
				}

				.article-item {
					flex-direction: column;
					align-items: flex-start;
					padding: 15px 12px;
					gap: 6px;
				}

				.article-title {
					font-size: 16px;
				}

				.article-date {
					margin-left: 0;
					min-width: auto;
					font-size: 12px;
				}

				.pagination {
					display: flex;
					flex-wrap: wrap;
					justify-content: center;
					gap: 4px;
				}

				.pagination a,
				.pagination span {
					margin: 0;
					padding: 4px 8px;
				}
			}
		</style>
	</head>
	<body>
		<Navigation lang={lang} />
		<div class="desktop">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">{t('article.list.page', { page: page.currentPage })}</div>
				</div>
				<div class="window-body">
					<div class="article-list">
						{page.data.map((post) => {
							const date = new Date(post.data.pubDate);
							const year = date.getFullYear();
							const month = (date.getMonth() + 1).toString().padStart(2, '0');

							return (
								<div class="article-item">
									<a href={`/${year}/${month}/${post.data.slug || post.id}/`} class="article-title">
										{post.data.title}
									</a>
									<span class="article-date">
										<FormattedDate date={post.data.pubDate} lang={lang} />
									</span>
								</div>
							);
						})}
					</div>

					{page.lastPage > 1 && (
						<div class="pagination">
							{page.url.prev && (
								<a href={page.url.prev} class="button">{t('pagination.prev')}</a>
							)}

							{Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => (
								pageNum === page.currentPage ? (
									<span class="current">{pageNum}</span>
								) : (
									<a href={pageNum === 1 ? '/' : `/${pageNum}/`}>{pageNum}</a>
								)
							))}

							{page.url.next && (
								<a href={page.url.next} class="button">{t('pagination.next')}</a>
							)}
						</div>
					)}
				</div>
			</div>
		</div>
		<Footer lang={lang} />
		<BackToTop lang={lang} />
	</body>
</html>
