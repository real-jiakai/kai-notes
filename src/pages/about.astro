---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE_I18N } from '../consts';
import { useTranslations } from '../i18n/utils';

const lang = 'zh';
const t = useTranslations(lang);
const SITE_TITLE = SITE_TITLE_I18N[lang];
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`${t('about.title')} - ${SITE_TITLE}`} description={t('about.description')} />
	</head>
	<body>
		<Navigation lang={lang} />
		<div class="desktop">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">{t('about.title')}</div>
				</div>
				<div class="window-body">
					<h2>{t('about.title')}</h2>
					<p>{t('about.description')}</p>

					<h3>{t('about.techStack')}</h3>
					<ul>
						<li>{t('about.astro')}</li>
						<li>{t('about.98css')}</li>
					</ul>
				</div>
			</div>
	</div>
	<Footer lang={lang} />
</body>
</html>

<style>
	html, body {
		height: 100%;
		margin: 0;
		padding: 0;
	}
	
	body {
		background: #c0c0c0;
		font-family: 'MS Sans Serif', sans-serif;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
	
	.desktop {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 20px;
		flex: 1;
		display: flex;
		flex-direction: column;
	}
	
	.window {
		flex: 1;
		display: flex;
		flex-direction: column;
	}
	
	.window-body {
		flex: 1;
		padding: 20px;
	}
	
	h2, h3 {
		color: #000080;
		margin: 20px 0 10px 0;
	}
	
	p, li {
		line-height: 1.6;
		margin: 10px 0;
	}
	
	ul {
		padding-left: 20px;
	}

	@media (max-width: 600px) {
		.desktop {
			padding: 0 12px;
		}

		.window-body {
			padding: 15px 12px;
		}

		h2 {
			font-size: 18px;
		}

		h3 {
			font-size: 16px;
		}
	}
</style>
